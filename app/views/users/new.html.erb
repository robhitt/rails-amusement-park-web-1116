<h1>New User<h1>

<%= form_for(@user) do |f| %>
  <%= f.label :name %>
  <br>
  <%= f.text_field :name %>
  <br>
  <%= f.label :height, "Height (in inches)"%>
  <br>
  <%= f.text_field :height %>
  <br>
  <%= f.label :happiness, "How happy are you? (1-5 scale)" %>
  <br>
  <%= f.number_field :happiness%>
  <br>
  <%= f.label :tickets, "How many dollars are in your pocket?" %>
  <br>
  <%= f.number_field :tickets%>
  <br>
  <%= f.label :admin, "Check box if you're a theme park owner" %>
  <%= f.check_box :admin%>
  <br>
  <br>
  <%= f.submit %>
<% end %>

<br>
<%= link_to 'back', '/users/index'%>
